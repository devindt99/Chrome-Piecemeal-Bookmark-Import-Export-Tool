{
  "manifest_version": 3,
  "name": "Piecemeal Bookmark Import/Export Tool",
  "version": "1.0",
  "description": "Sync bookmarks with Google Drive",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "identity"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "YOUR_GOOGLE_DRIVE_CLIENT_ID",
    "scopes": ["https://www.googleapis.com/auth/drive.readonly"]
  },
  "web_accessible_resources": [
    {
      "resources": ["gapi.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
